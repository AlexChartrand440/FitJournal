<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/completed_exercise_type_icon_civ"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/weight_lifting"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/dark_gray"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/completed_exercise_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/completed_exercise_type_icon_civ"
            android:text="@string/strength_session"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:paddingBottom="6dp"
            />

        <TextView
            android:id="@+id/completed_exercise_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/completed_exercise_type_icon_civ"
            android:layout_below="@id/completed_exercise_name_tv"
            android:text="@string/cardio_session"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>